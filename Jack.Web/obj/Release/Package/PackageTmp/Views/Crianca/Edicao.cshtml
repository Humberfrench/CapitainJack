<!-- Edição Modal -->
@{
    IEnumerable<SelectListItem> statusLista = ViewBag.Status as IEnumerable<SelectListItem>;
    IEnumerable<SelectListItem> kitLista = ViewBag.kit as IEnumerable<SelectListItem>;
    IEnumerable<SelectListItem> tipoParentescoLista = ViewBag.TipoParentesco as IEnumerable<SelectListItem>;

}
@Styles.Render("~/plugins/awesomeCheckboxStyles")
@Styles.Render("~/plugins/dataPickerStyles")
@Html.AntiForgeryToken()
<div id="modalEdicao" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="gridSystemModalLabel">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content animated">
            <div class="modal-header success-element">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="gridSystemModalLabel">Crianças</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-1">&nbsp;</div>
                    <div class="col-lg-8">
                        <label id="labelNome" for="Nome">Criança</label>
                        <input type="hidden" id="Codigo" name="Codigo" value="" />
                        <input type="text" id="Nome" name="Nome" value="" class="form-control m-b-md" placeholder="Nome da Criança" maxlength="75" />
                    </div>
                    <div class="col-lg-2">
                        <label id="labelParentesco" for="TipoParentesco">Parentesco</label>
                        @Html.DropDownList("TipoParentesco", tipoParentescoLista, new { @id = "TipoParentesco", @class = "form-control m-b" })                        
                    </div>
                    <div class="col-lg-1">&nbsp;</div>
                </div>
                <div class="row">
                    <div class="col-lg-1">&nbsp;</div>
                    <div class="col-lg-3">
                        <label id="labelDataNascimento" for="DataNascimento">Data Nascimento</label>
                        <input type="text" id="DataNascimento" name="DataNascimento" value="" class="form-control m-b-md" data-mask="99/99/9999" maxlength="50" />
                    </div>
                    <div class="col-lg-1">
                        <label id="labelIdade" for="Idade">Idade</label>
                        <input type="text" id="Idade" name="Idade" value="" readonly="readonly" class="form-control m-b-md" placeholder="" maxlength="2" />
                    </div>
                    <div class="col-lg-2">
                        <label id="labelMedidaIdade" for="MedidaIdade">Medida Idade</label>
                        <select id="MedidaIdade" name="MedidaIdade" class="form-control m-b" disabled="disabled">
                            <option value="M">Meses</option>
                            <option value="A">Anos</option>
                        </select>
                    </div>
                    <div class="col-lg-2">
                        <label id="labelSexo" for="Sexo">Sexo</label>
                        <select id="Sexo" name="Sexo" class="form-control m-b">
                            <option value="M">Masculino</option>
                            <option value="F">Feminino</option>
                            <option value="I">Indefinido</option>
                        </select>
                    </div>
                    <div class="col-lg-3">
                        <label></label>
                        <div class="checkbox checkbox-primary" data-toggle="tooltip" data-placement="top" title="Criança Grande e ou maior que o tamanho normal da criança, Para Tamanho/Kit Maior">
                            <input type="checkbox" name="CriancaGrande" id="CriancaGrande">
                            <label id="labelCriancaGrande" for="CriancaGrande">Crianca Grande</label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-1">&nbsp;</div>
                    <div class="col-lg-2">
                        <label id="labelIdadeNominalReduzida" for="IdadeNominalReduzida">Idade Nominal</label>
                        <input type="text" id="IdadeNominalReduzida" name="IdadeNominalReduzida" value="" class="form-control m-b-md" readonly="readonly" />
                    </div>
                    <div class="col-lg-3">
                        <label id="labelIdadeNominal" for="IdadeNominal">Idade Nominal</label>
                        <input type="text" id="IdadeNominal" name="IdadeNominal" value="" class="form-control m-b-md" readonly="readonly" />
                    </div>
                    <div class="col-lg-5">
                        <label id="labelKit" for="Kit">Kit</label>
                        @Html.DropDownList("Kit", kitLista, new { @id = "Kit", @class = "form-control m-b" })
                    </div>
                    <div class="col-lg-1" style="vertical-align:text-bottom;">
                        <label></label>
                        <button type="button" class="btn btn-primary" id="ValidarCrianca" name="ValidarCrianca">
                            <i class="glyphicon glyphicon-share-alt"></i>
                        </button>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-1">&nbsp;</div>
                    <div class="col-lg-1">
                        <label id="labelCalcado" for="Calcado">Calçado</label>
                        <input type="text" id="Calcado" name="Calcado" value="99" class="form-control m-b-n-md" />
                    </div>
                    <div class="col-lg-1">
                        <label id="labelCalcadoPadrao" for="Calcado">Padrão</label>
                        <input type="text" id="CalcadoPadrao" name="CalcadoPadrao" value="99" readonly="readonly" class="form-control m-b-md" />
                    </div>
                    <div class="col-lg-1">
                        <label id="labelRoupa" for="Calcado">Roupa</label>
                        <input type="text" id="Roupa" name="Roupa" value="99" class="form-control m-b-n-md" />
                    </div>
                    <div class="col-lg-1">
                        <label id="labelRoupaPadrao" for="Calcado">Padrão</label>
                        <input type="text" id="RoupaPadrao" name="RoupaPadrao" value="99" readonly="readonly" class="form-control m-b-md" />
                    </div>
                    <div class="col-lg-2">
                        <br />
                        <button type="button" class="btn btn-primary" id="Limpa" name="Limpa">
                            <i class="glyphicon glyphicon-trash"></i> Limpar Dados
                        </button>
                    </div>
                    <div class="col-lg-2">
                        <br />
                        <button type="button" class="btn btn-primary" id="UsaPadraoCalcado" name="UsaPadraoCalcado">
                            <i class="glyphicon glyphicon-tag"></i>Calçado Padrão
                        </button>
                    </div>
                    <div class="col-lg-2">
                        <br />
                        <button type="button" class="btn btn-primary" id="UsaPadraoRoupa" name="UsaPadraoRoupa">
                            <i class="glyphicon glyphicon-tag"></i>Roupa Padrão
                        </button>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-1">&nbsp;</div>
                    <div class="col-lg-6">
                        <label id="labelStatus" for="Status">Status</label>
                        @Html.DropDownList("Status", statusLista, new { @id = "Status", @class = "form-control m-b", @disabled = "disabled" })
                    </div>
                    <div class="col-lg-2">
                        <label id="labelDataCriacao" for="DataCriacao">Data Inclusão</label>
                        <input type="text" id="DataCriacao" name="DataCriacao" class="form-control m-b-md" readonly="readonly" />
                    </div>
                    <div class="col-lg-2">
                        <label id="labelDataAtualizacao" for="DataCriacao">Data Alteração</label>
                        <input type="text" id="DataAtualizacao" name="DataAtualizacao" class="form-control m-b-md" readonly="readonly" />
                    </div>
                    <div class="col-lg-1">&nbsp;</div>
                </div>
                <div class="row">
                    <div class="col-lg-3">
                        <div class="checkbox checkbox-primary" data-toggle="tooltip" data-placement="top" title="Se checado este valor, indica que a criança tem necessidade especial, e recebe kit diferenciado.">
                            <input type="checkbox" name="NecessidadeEspecial" id="NecessidadeEspecial">
                            <label id="labelNecessidadeEspecial" for="NecessidadeEspecial">Necessidade Especial</label>
                        </div>
                    </div>
                    <div class="col-lg-2">
                        <div class="checkbox checkbox-primary">
                            <input type="checkbox" name="Consistente" id="Consistente">
                            <label id="labelConsistente" for="Consistente">Consistente?</label>
                        </div>
                    </div>
                    <div class="col-lg-2">
                        <div class="checkbox checkbox-primary">
                            <input type="checkbox" name="Sacolinha" id="Sacolinha">
                            <label id="labelSacolinha" for="Sacolinha">Sacolinha?</label>
                        </div>
                    </div>
                    <div class="col-lg-2">
                        <div class="checkbox checkbox-primary" data-toggle="tooltip" data-placement="top" title="Se checado este valor, é permitido criança com idade maior que o limite, por estar na escolinha Moral Cristã.">
                            <input type="checkbox" name="MoralCrista" id="MoralCrista">
                            <label id="labelMoralCrista" for="MoralCrista">Moral Cristã</label>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="checkbox checkbox-primary">
                            <input type="checkbox" name="DocumentoOk" id="DocumentoOk">
                            <label id="labelDocumentoOk" for="DocumentoOk">Documento Ok</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">
                    <i class="glyphicon glyphicon-remove"></i>Fechar
                </button>
                <button type="button" class="btn btn-primary" id="Gravar">
                    <i class="glyphicon glyphicon-floppy-disk"></i>Gravar
                </button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
