<!-- Edição Modal -->
@{
    IEnumerable<SelectListItem> tipoParentescoLista = ViewBag.TipoParentesco as IEnumerable<SelectListItem>;

}
@Styles.Render("~/plugins/awesomeCheckboxStyles")
@Html.AntiForgeryToken()
<div id="modalEdicao" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="gridSystemModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content animated">
            <div class="modal-header success-element">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="gridSystemModalLabel">Edição de Representante</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-1">&nbsp;</div>
                    <div class="col-md-10">
                        <label id="labelFamiliaRepresentante" for="labelFamiliaRepresentante">Família Representante</label>
                        <input type="hidden" id="Codigo" name="Codigo"/>
                        <input type="hidden" id="CodigoFamiliaRepresentante" name="CodigoFamiliaRepresentante"/>
                        <input type="hidden" id="CodigoFamiliaRepresentada" name="CodigoFamiliaRepresentada" />
                        <input type="text" id="FamiliaRepresentante" name="FamiliaRepresentante" value="" class="form-control m-b-md" readonly="readonly" />
                    </div>
                    <div class="col-md-1">&nbsp;</div>
                </div>
                <div class="row">
                    <div class="col-md-1">&nbsp;</div>
                    <div class="col-md-10">
                        <label id="labelFamiliaRepresentada" for="FamiliaRepresentada">Família Representada</label>
                        <input type="text" id="FamiliaRepresentada" name="FamiliaRepresentada" value="" class="form-control m-b-md" readonly="readonly" />
                    </div>
                    <div class="col-md-1">&nbsp;</div>
                </div>
                <div class="row">
                    <div class="col-md-1">&nbsp;</div>
                    <div class="col-md-3">
                        <label id="labelTipoParentesco" for="TipoParentesco">Parentesco</label>
                        @Html.DropDownList("TipoParentesco", tipoParentescoLista, new { @id = "TipoParentesco", @class = "form-control m-b" })
                    </div>
                    <div class="col-md-3">
                        <label id="label1">&nbsp;</label>
                        <div class="checkbox checkbox-primary">
                            <input type="checkbox" name="Parente" id="Parente" id="Ativo" disabled="disabled">
                            <label id="labelParente" for="Parente">É Parente</label>
                        </div>
                    </div>
                    <div class="col-md-5">
                        <label id="label2">&nbsp;</label>
                        <div class="checkbox checkbox-primary">
                            <input type="checkbox" name="Ativo">
                            <label id="labelAtivo" for="Ativo">Familia Representada Ativa</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">
                    <i class="glyphicon glyphicon-remove"></i>Fechar
                </button>
                <button type="button" class="btn btn-primary" id="Gravar" onclick="return Representante.GravarEdicao();">
                    <i class="glyphicon glyphicon-floppy-disk"></i>Gravar
                </button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
