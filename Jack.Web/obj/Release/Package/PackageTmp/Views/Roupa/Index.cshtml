@using Jack.Application.ViewModel
@using Jack.Extensions
@model IEnumerable<RoupaViewModel>
@Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
@{
    ViewBag.Title = "Roupas";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Roupas</h5>
                    <div class="ibox-tools">
                    </div>
                </div>
                <div class="ibox-content">
                    <table class="table table-striped table-hover" id="TableRoupa">
                        <thead>
                            <tr>
                                <th>Descrição</th>
                                <th>Tamanho Sugerido</th>
                                <th>Tamanho Maior</th>
                                <th>Idade</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Descricao)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Tamanho)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TamanhoMaior)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IdadeCompleta)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/script/Roupa/main")
}
