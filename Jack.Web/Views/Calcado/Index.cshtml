@using Jack.Application.ViewModel
@using Jack.Extensions
@model IEnumerable<CalcadoViewModel>
@Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
@{
    ViewBag.Title = "Calçados";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Calçados</h5>
                    <div class="ibox-tools">
                        <div class="btn-group">
                            <button type="button" class="btn btn-success  btn-lg dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" id="Incluir" name="Filtro" data-toggle="tooltip" data-placement="top"
                                    title="Filtro de Calçados">
                                <i class="glyphicon glyphicon-file"></i>
                                Filtro <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu">
                                <li><a href="@Url.Action("Index", "Calcado")"><i class="fa fa-child"></i>&nbsp;Todos</a></li>
                                <li><a href="@Url.Action("Meninos", "Calcado")"><i class="fa fa-male"></i>&nbsp;Meninos</a></li>
                                <li><a href="@Url.Action("Meninas", "Calcado")"><i class="fa fa-female"></i>&nbsp;Meninas</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="ibox-content">
                    <table class="table table-striped" id="TableCalcado">
                        <thead>
                            <tr>
                                <th>Sexo</th>
                                <th>Idade Inicial</th>
                                <th>Idade Final</th>
                                <th>Calçado</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @item.Sexo.ToSexo()
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IdadeInicial)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IdadeFinal)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Numero)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/script/Calcado/main")
}
