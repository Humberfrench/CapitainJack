@using Jack.Application.ViewModel
@using Jack.Extensions
@model IEnumerable<NivelViewModel>
@Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
@{
    ViewBag.Title = "Nível de Presença";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<input type="hidden" name="URLObterTodos" id="URLObterTodos" value="@Url.Action("Index")" />
<input type="hidden" name="URLEdit" id="URLEdit" value="@Url.Action("Edit")" />
<input type="hidden" name="URLGravar" id="URLGravar" value="@Url.Action("Gravar")" />
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Nível de Presença</h5>
                    <div class="ibox-tools">
                        <button type="button" id="Novo" name="Novo"
                                class="btn btn-primary btn-lg"
                                data-toggle="tooltip" data-placement="top"
                                title="Novo Registro">
                            <i class="glyphicon glyphicon-file"></i>Novo
                        </button>
                    </div>
                </div>
                <div class="ibox-content">
                    <table class="table table-striped table-hover" id="TableTipoItem">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Codigo)</th>
                                <th>@Html.DisplayNameFor(model => model.Nome)</th>
                                <th>@Html.DisplayNameFor(model => model.Descricao)</th>
                                <th>@Html.DisplayNameFor(model => model.SacolaGarantida)</th>
                                <th>@Html.DisplayNameFor(model => model.ListaDeEspera)</th>
                                <th>@Html.DisplayNameFor(model => model.NuncaGerarSacola)</th>
                                <th>@Html.DisplayNameFor(model => model.PercentualInicial)</th>
                                <th>@Html.DisplayNameFor(model => model.PercentualFinal)</th>
                                <th>&nbsp;</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(model => item.Codigo)</td>
                                    <td>@Html.DisplayFor(model => item.Nome)</td>
                                    <td>@Html.DisplayFor(model => item.Descricao)</td>
                                    <td>@item.SacolaGarantida.ToSimNao()</td>
                                    <td>@item.ListaDeEspera.ToSimNao()</td>
                                    <td>@item.NuncaGerarSacola.ToSimNao()</td>
                                    <td>@Html.DisplayFor(model => item.PercentualInicial)</td>
                                    <td>@Html.DisplayFor(model => item.PercentualFinal)</td>
                                    <td style="text-align:right;">
                                        <button type="button" class="btn btn-success btn-sm" onclick="Edit('@item.Codigo')">
                                            <i class="glyphicon glyphicon-pencil" data-toggle="tooltip" data-placement="top" title="Editar Registro"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>

@Html.Partial("Edicao")

@section scripts
{
    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/script/Nivel/main")
}
