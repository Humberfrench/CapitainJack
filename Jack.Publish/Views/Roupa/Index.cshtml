@using Jack.Application.ViewModel
@using Jack.Extensions
@model IEnumerable<RoupaViewModel>
@Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
@{
    ViewBag.Title = "Roupas";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Roupas</h5>
                    <div class="ibox-tools">
                    </div>
                </div>
                <div class="ibox-content">
                    <table class="table table-striped table-hover" id="TableRoupa">
                        <thead>
                            <tr>
                                <th rowspan="2">Descrição</th>
                                <th rowspan="2">Tamanho</th>
                                <th rowspan="2">Tamanho Maior</th>
                                <th colspan="2">Tamanho Sugerido</th>
                                <th colspan="2">Tamanho Maior Sugerido</th>
                                <th rowspan="2">Idade</th>
                            </tr>
                        <tr>
                            <th>De</th>
                            <th>Até</th>
                            <th>De</th>
                            <th>Até</th>
                        </tr>

                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Descricao)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Tamanho)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TamanhoMaior)
                                    </td>
                                    
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TamanhoSugeridoDe)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TamanhoSugeridoAte)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TamanhoSugeridoMaiorDe)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TamanhoSugeridoMaiorAte)
                                    </td>


                                    <td>
                                        @Html.DisplayFor(modelItem => item.IdadeCompleta)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/script/Roupa/main")
}
